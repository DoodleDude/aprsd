#!/bin/sh
set -e


case "$1" in
    remove)
       # Nothing to do here
    ;;

    purge)
       if [ -d "/var/log/polaric" ]; then
          rm -R /var/log/polaric 
       fi
       if [ -d "/var/lib/polaric" ]; then
          rm -R /var/lib/polaric 
       fi
    ;;

    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        # Nothing to do here
    ;;

    *)
        echo "$0 called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#